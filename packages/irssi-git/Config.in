config BR2_PACKAGE_IRSSI_GIT
	bool "irssi (git)"
	depends on BR2_USE_WCHAR # libglib2
	depends on BR2_TOOLCHAIN_HAS_THREADS # libglib2
	depends on BR2_USE_MMU # fork()
	select BR2_PACKAGE_LIBGLIB2
	select BR2_PACKAGE_NCURSES
	select BR2_PACKAGE_OPENSSL
	help
	  Irssi is a terminal based IRC client for UNIX systems.

	  http://irssi.org/

if BR2_PACKAGE_IRSSI_GIT

config BR2_PACKAGE_IRSSI_GIT_LIBOTR
	bool "OTR messaging support"
	select BR2_PACKAGE_LIBOTR
	help
	  Enable off-the-record messaging support in irssi.

config BR2_PACKAGE_IRSSI_GIT_PERL
	bool "perl support"
	select BR2_PACKAGE_PERL
	help
	  Enable perl interpreter support.

config BR2_PACKAGE_IRSSI_GIT_PROXY
	bool "proxy module"
	help
	  Build the irssi proxy module, which allows an IRC connection
	  to be shared among multiple clients.

config BR2_PACKAGE_IRSSI_GIT_TIME_SCRIPTS
	bool "enable support for scripts such as server time and auto away"
	select BR2_PACKAGE_PERL_DATETIME_FORMAT_ISO8601
	help
	  This enables support for scripts such as server time.

	  These require the addition of several perl modules.

	  This config option *DOES NOT* install scripts.

	  It merely selects the required modules for perl.

config BR2_PACKAGE_IRSSI_GIT_TRUE_COLOR
	bool "true color support"
	help
	  Build with true color support in terminal.

endif

comment "irssi needs a toolchain w/ wchar, threads"
	depends on BR2_USE_MMU
	depends on !BR2_USE_WCHAR || !BR2_TOOLCHAIN_HAS_THREADS
