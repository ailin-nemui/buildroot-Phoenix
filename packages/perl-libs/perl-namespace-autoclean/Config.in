config BR2_PACKAGE_PERL_NAMESPACE_AUTOCLEAN
	bool "perl-namespace-autoclean"
	depends on !BR2_STATIC_LIBS
	select BR2_PACKAGE_PERL_B_HOOKS_ENDOFSCOPE # runtime
	select BR2_PACKAGE_PERL_SUB_IDENTIFY # runtime
	select BR2_PACKAGE_PERL_NAMESPACE_CLEAN # runtime
	help
	  Keep imports out of your namespace.

	  https://github.com/moose/namespace-autoclean

comment "perl-namespace-autoclean needs a toolchain w/ dynamic library"
	depends on BR2_STATIC_LIBS
