config BR2_PACKAGE_PERL_DATETIME
	bool "perl-datetime"
	depends on !BR2_STATIC_LIBS
	select BR2_PACKAGE_PERL_DATETIME_LOCALE # runtime
	select BR2_PACKAGE_PERL_DATETIME_TIMEZONE # runtime
	select BR2_PACKAGE_PERL_DIST_CHECKCONFLICTS # runtime
	select BR2_PACKAGE_PERL_PARAMS_VALIDATIONCOMPILER # runtime
	select BR2_PACKAGE_PERL_SPECIO # runtime
	select BR2_PACKAGE_PERL_TRY_TINY # runtime
	select BR2_PACKAGE_PERL_NAMESPACE_AUTOCLEAN # runtime
	help
	  A date and time object for Perl.

	  https://metacpan.org/release/DateTime

comment "perl-datetime needs a toolchain w/ dynamic library"
	depends on BR2_STATIC_LIBS
